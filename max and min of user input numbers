largest = none
smallest = none
while true:
    num = raw_input('Enter an integer: ')
	try:
    	num = int(num)
	except:
    	print 'Invalid input'
	continue
    	compare = int(num)
	if compare < smallest:
        smallest = compare
    else
        largest = compare
    if compare > largest:
        largest = compare
    if num == 'done':
        break
print 'Maximum is '+ 'largest'
print 'Minimum is '+ 'smallest'
